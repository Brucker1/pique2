<!-- search bar -->
<%= form_tag(projects_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Projects" %>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>

<!-- rendering the results of a search -->
<% if @search_results != nil %>
  <h2>Search Results</h2>
  <% @search_results.each do |project| %>
  <a href=<%= project_path(project) %>><%= project.name %></a> has <%= project.openings %> openings.</br>
  <% end %>
<% end %>

<% if @search_results != nil %>
  <h2>All Projects</h2>
<% end %>
<% @projects.each do |project| %>
  <%= project.name %></br>
  <%= project.about %></br></br>
