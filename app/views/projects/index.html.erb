<img src="<%= current_user.image %>"><%= current_user.name %> has <%= @projects.count %> project(s).</br>

<!-- search bar -->
<%= form_tag(projects_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Projects" %>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>

<!-- rendering the results of a search -->
<% if @search_results != [] %>
  <% @search_results.each do |project| %>
  <%= project.name %> has <%= project.number_of_collaborators %> collaborators:</br>
    <ul>
      <li><a href='/users/<%= @user.id %>'><%= project.collaborators.split',' %></a></li>
    </ul>
  <% end %>
<% end %>

<% @projects.each do |project| %>
<%= project.name %> has <%= project.number_of_collaborators %> collaborators:</br>
  <ul>
    <li><a href='/users/<%= @user.id %>'><%= project.collaborators.split',' %></a></li>
  </ul>
<% end %>

<%#= @project.created_at %>

<% @users.each do |user| %>
  <%= @user.name %>
<% end %>
