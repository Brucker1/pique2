<!-- general people search -->
<%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search People" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>

<!-- non-name searches -->
<%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :industry, params[:industry], class: "span2", placeholder: "Industry" %>
    <%= text_field_tag :headline, params[:headline], class: "span2", placeholder: "Positions/Interests" %>
    <%= text_field_tag :location, params[:location], class: "span2", placeholder: "Location" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>

<% if @industry_results != nil && @industry_results != "" %>
  <h2>Industry Search Results</h2>
<% @industry_results.each do |user| %>
  <div class="list">
    <%= user.name %>
    <img src="<%= user.image %>">
    <%= link_to 'Show', user %>
  </div>
<% end %>
<% end %>

