<%= form_tag(articles_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search People" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>

<% if @search_results != nil %>
  <h2>Search Results</h2>
  <div class="list">
    <%= user.name %>
    <img src="<%= user.image %>">
    <%= link_to 'Show', user %>
  </div>
<% end %>

<% if @search_results != nil %>
  <h2>All Users</h2>
<% end %>
<% @users.each do |user| %>
  <div class="list">
    <%= user.name %>
    <img src="<%= user.image %>">
    <%= link_to 'Show', user %>
  </div>
<% end %>
